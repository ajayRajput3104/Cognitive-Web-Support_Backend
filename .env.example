# ============================================================================
# AI API KEYS (REQUIRED)
# ============================================================================

# Google Gemini API Key (REQUIRED)
# Get from: https://makersuite.google.com/app/apikey
# Free tier: 60 requests/minute
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# PERSISTENT STORAGE (REQUIRED FOR PRODUCTION) - UPDATED 2024
# ============================================================================

# Pinecone Vector Database (NEW API 2024)
# Get from: https://www.pinecone.io/
# NOTE: No PINECONE_ENVIRONMENT needed with new API!
# Just API key and index name
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=cognitive-support

# Render Key-Value Store (Valkey/Redis compatible)
# NOTE: Render now uses Valkey (Redis fork) but it's 100% compatible
# Still uses redis:// URL scheme - NO CHANGES NEEDED
# Local: redis://localhost:6379
# Render: redis://red-xxxxx.oregon-redis.render.com:6379
REDIS_URL=redis://localhost:6379

# ============================================================================
# SECURITY
# ============================================================================

# API Key for authentication (CHANGE THIS!)
# Generate with: openssl rand -hex 32
API_KEY=dev-api-key-change-in-production

# CORS allowed origins (comma-separated)
# Examples: http://localhost:3000,https://myapp.com
# Use * for development only
ALLOWED_ORIGINS=*

# Rate limiting (format: count/period)
RATE_LIMIT=10/minute

# ============================================================================
# SEARCH CONFIGURATION (HYBRID APPROACH - UPDATED 2024)
# ============================================================================

# Google Custom Search (OPTIONAL - for primary search)
# Get from: https://console.cloud.google.com/
# If not set, will use DuckDuckGo only
# If set, uses Google first (100/day), then DuckDuckGo fallback (unlimited)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_cse_id_here

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Server port
PORT=8000

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Cache duration in hours
CACHE_DURATION_HOURS=24

# Maximum pages to crawl per domain
MAX_PAGES_TO_CRAWL=10

# Text chunking settings
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# RAG retrieval settings
TOP_K_CHUNKS=5

# Embedding model
EMBEDDING_MODEL=all-MiniLM-L6-v2